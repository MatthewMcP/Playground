
<span class="spacer_10"></span>

<div class="result">
    <span class="spacer_5"></span>

    <div class="col-sm-3 col-xs-4">
        <p class="name font_bold">@Model.Name</p>    
        <!-- TODO: This is hacky, change one day-->
        <img class="pkm small @Model.ImageClassName" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" >
    </div>
    
    <div class="col-sm-9 col-xs-8">
            <div class="row">
                <div class="id col-sm-2 col-xs-3">
                    <p>ID: @Model.NDexId</p>
                </div>
                <div class="col-sm-1 col-xs-2">
                    <p>Type:</p>
                </div>
                <div class="type col-sm-7 col-xs-5">
                   @{
                           var NumOfTypes = Model.PokemonTypesList.Count;
                           if(NumOfTypes == 1)
                            {
                                <p>@Model.PokemonTypesList[0] </p>
                            }
                            else
                            {
                            <p>
                                @Model.PokemonTypesList[0] / @Model.PokemonTypesList[1]    
                            </p> 
                            }
                    }
                </div>
                <div class="col-sm-2 col-xs-2">
                    @if (Model.Missable)
                    {
                        <i title="This pokemon is missable" class="fas fa-exclamation-triangle" data-toggle="tooltip" data-placement="bottom"></i>
                    }
                    @if (Model.Legendary)
                    {
                        <i title="This pokemon is legendary" class="fas fa-star" data-toggle="tooltip" data-placement="bottom"></i>
                    }
                </div>
        </div>

        <div class="row">
            <div class="col-sm-2 col-xs-4">
                <p>Evolution:</p>    
            </div>
            <div class="col-sm-10 col-xs-8">
                <p>@Model.EvolutionDetails</p>    
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-xs-3">
                <p>Locations:</p>    
            </div>
            <div class="col-sm-10 col-xs-9">
                <ul>
                @foreach(var location in Model.Locations)
                {
                      <li>@location</li>
                }
                </ul>  
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-xs-3">
                <p>Notes:</p>    
            </div>
            <div class="col-sm-10 col-xs-9">
                <ul>
                @foreach(var note in Model.Notes)
                {
                      <li>@note</li>
                }            
                </ul>  
            </div>
        </div>
    </div>
</div>

<span class="spacer_10"></span>